<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/SE_spring2013_g8.hal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix" >

    <Chronometer
        android:id="@+id/chronometer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Chronometer" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp" />
 
    <GridLayout
        android:id="@+id/GridView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="@integer/two_rows"
        android:rowCount="@integer/three"
        
        tools:ignore="NewApi" >

        <ImageButton
            android:id="@+id/intercom_connect_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:src="@drawable/intercom_camera"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/intercom_connect_spkr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:src="@drawable/intercom_mic" />

        <ImageButton
            android:id="@+id/intercom_connect_mic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="1"
            android:src="@drawable/intercom_spkr" />

    </GridLayout>

    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
 
</LinearLayout>